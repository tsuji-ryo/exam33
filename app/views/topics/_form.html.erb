
<%= form_for(@topic, url: choose_new_or_edit) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= @topic.errors.count %>件のエラーがあります。</h2>


      <ul>
        <% @topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title,class: 'form-control' %>
  <br>

  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control input-mysize',:placeholder => "今なにしてる？" %>
  <br>

  <%= f.label :image %>
  <%= f.text_field :image,:placeholder => "Image URL" %>
  <br>

  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "Topic一覧に戻る", topics_path %>